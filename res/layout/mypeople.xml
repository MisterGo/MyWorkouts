<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/myPeopleLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="false"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="label"
            android:textSize="30px"
            android:id="@+id/mypeoplelabel" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:clickable="false"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypeoplecheckbox"
            android:layout_marginRight="10px"
            android:layout_alignParentRight="true" android:layout_alignTop="@+id/mypeoplelabel"
            android:checked="false" android:focusable="false"/>
</RelativeLayout>

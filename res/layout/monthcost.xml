<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013"
            android:id="@+id/listOfMonthsYearText" android:layout_gravity="center_horizontal|top" android:textSize="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "
            android:id="@+id/listOfMonthsSlashText" android:layout_gravity="center_horizontal|top" android:textSize="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:id="@+id/listOfMonthsMonthText" android:layout_gravity="center_horizontal|top" android:textSize="20dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10000"
            android:id="@+id/listOfMonthsCostText" android:textSize="20dp"
            android:gravity="right"/>
</LinearLayout>